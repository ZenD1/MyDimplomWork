<Page x:Class="DiplomZabpo43.ItemDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:DiplomZabpo43"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="710"
      Title="ItemDetailsPage"
      >

    <Grid>

        <!-- Здесь разместите элементы управления для отображения информации о выбранном предмете -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="680" Width="710">

            <StackPanel Orientation="Horizontal" Height="342">
                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="283">
                        <Button x:Name="btnBackAut" Height="32" Width="37" HorizontalAlignment="Left" Background="White" BorderThickness="0,1" Click="btnBackAut_Click" Margin="10,10,0,0" >
                            <StackPanel Orientation="Vertical" Height="28" Width="35" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-0.213"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <fa:ImageAwesome Icon="MailReply" Spin="False" SpinDuration="10" Foreground="Black" Width="27" Height="25"/>
                            </StackPanel>
                        </Button>
                        <fa:ImageAwesome x:Name="Star1" Icon="Star" Spin="False" SpinDuration="10" Foreground="Black" Width="25" Height="25" Margin="100,0,0,0"/>

                        <fa:ImageAwesome x:Name="Star2" Icon="Star" Spin="False" SpinDuration="10" Foreground="Black" Width="25" Height="25"/>

                        <fa:ImageAwesome x:Name="Star3" Icon="Star" Spin="False" SpinDuration="10" Foreground="Black" Width="25" Height="25" />

                        <fa:ImageAwesome x:Name="Star4" Icon="Star" Spin="False" SpinDuration="10" Foreground="Black" Width="25" Height="25"/>

                        <fa:ImageAwesome x:Name="Star5" Icon="Star" Spin="False" SpinDuration="10" Foreground="Black" Width="25" Height="25" />

                    </StackPanel>
                    <Image Height="300" Width="300" HorizontalAlignment="Left" x:Name="SelectedImage"  Source="{Binding Image_med}"></Image>
                </StackPanel>
                <StackPanel Width="263">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Категория: "/>
                            <Label x:Name="categoryLabel" Content="{Binding Category_name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Наименование: "/>
                            <Label x:Name="nameLabel" Content="{Binding Name_product}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Бренд: "/>
                            <Label x:Name="brandLabel" Content="{Binding Brand_name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Производитель: "/>
                            <Label x:Name="manufacturerLabel" Content="{Binding Manufac_name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Форма: "/>
                            <Label x:Name="formLabel" Content="{Binding Form}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Страна: "/>
                            <Label x:Name="countryLabel" Content="{Binding Country_name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Дозировка: "/>
                            <Label x:Name="dosaLabel" Content="{Binding Dosa_name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Подподкатегория: "/>
                            <Label x:Name="subsubcategoryLabel" Content="{Binding Subsubcategory_name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Label Content="Подкатегория: "/>
                            <Label x:Name="subcategoryLabel" Content="{Binding Subcategory_name}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Width="147" Height="179">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Цена: "/>
                        <Label Content="{Binding Price}"></Label>

                    </StackPanel>
                    <StackPanel Width="147" Height="29" Orientation="Horizontal">
                        <Label Content="{Binding Nal}" x:Name="NalLabel"></Label>
                    </StackPanel>
                    <Button x:Name="ZakazButton" Height="18" Content="Заказать" Click="Zakaz_Click" Width="127"   Style="{StaticResource LoginButtonStyle}" HorizontalAlignment="Left"></Button>
                    <Label Content="Выберите аптеку"> </Label>
                    <ComboBox x:Name="AptekaComboBox" Width="120" Margin="5" SelectionChanged="AptekaComboBox_SelectionChanged" HorizontalAlignment="Left">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Address}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Условия хранения: "></Label>
                <Label Content="{Binding Contraindications}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Рекомендации: "></Label>
                <Label Content="{Binding StorageCondition}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Дайте оценку: " Height="26" VerticalAlignment="Bottom"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="156">
                    <CheckBox x:Name="Star11" Checked="Star_Checked" Unchecked="Star_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border x:Name="BackgroundBorder" CornerRadius="2">
                                        <fa:ImageAwesome x:Name="Star111" Icon="Star" Spin="False" SpinDuration="10" Width="25" Height="25" Foreground="Gray"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Star111" Property="Foreground" Value="Yellow"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <CheckBox x:Name="Star12" Checked="Star_Checked" Unchecked="Star_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border x:Name="BackgroundBorder" CornerRadius="2">
                                        <fa:ImageAwesome x:Name="Star222" Icon="Star" Spin="False" SpinDuration="10" Width="25" Height="25" Foreground="Gray"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Star222" Property="Foreground" Value="Yellow"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <CheckBox x:Name="Star13" Checked="Star_Checked" Unchecked="Star_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border x:Name="BackgroundBorder" CornerRadius="2">
                                        <fa:ImageAwesome x:Name="Star333" Icon="Star" Spin="False" SpinDuration="10" Width="25" Height="25" Foreground="Gray"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Star333" Property="Foreground" Value="Yellow"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <CheckBox x:Name="Star14" Checked="Star_Checked" Unchecked="Star_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border x:Name="BackgroundBorder" CornerRadius="2">
                                        <fa:ImageAwesome x:Name="Star444" Icon="Star" Spin="False" SpinDuration="10" Width="25" Height="25" Foreground="Gray"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Star444" Property="Foreground" Value="Yellow"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <CheckBox x:Name="Star15" Checked="Star_Checked" Unchecked="Star_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border x:Name="BackgroundBorder" CornerRadius="2">
                                        <fa:ImageAwesome x:Name="Star555" Icon="Star" Spin="False" SpinDuration="10" Width="25" Height="25" Foreground="Gray"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Star555" Property="Foreground" Value="Yellow"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Введите комментарий: " Height="26" VerticalAlignment="Bottom"/>
                <TextBox x:Name="CommentTextBox" Width="173" Margin="0,20,20,0" Height="20"/>
            </StackPanel>
            <Button HorizontalAlignment="Right" Content="Добавить комментарий" Click="AddComm_Click" Width="174" Margin="0,20,20,0" Style="{StaticResource LoginButtonStyle}" Height="24"></Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                </StackPanel>
            </StackPanel>

            <Button x:Name="ShowComment" HorizontalAlignment="Center" Margin="0,0,2,0" Height="32" Width="665" Style="{StaticResource MenuButton}" Click="ShowComm_Click">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Показать комментарии"></Label>
                    <fa:ImageAwesome Icon="LevelDown" Spin="False" SpinDuration="10" Foreground="Black" Width="25" Height="25"/>
                </StackPanel>
            </Button>
            <ListBox x:Name="itemsListView"  Height="130" Width="665" SelectionChanged="itemsListView_SelectionChanged">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Star" Spin="False" SpinDuration="10" Width="25" Height="25" Foreground="Orange"/>
                        <Label Content="{Binding Rating}" x:Name="RatingLabel"/>
                    </StackPanel>
                    <Label Content="{Binding User}" x:Name="UserLabel"/>
                    <Label Content="{Binding ContentCom}" x:Name="CommentLabel"/>
                </StackPanel>
            </ListBox>



        </StackPanel>
    </Grid>
</Page>

