<Page x:Class="DiplomZabpo43.SetRecieptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomZabpo43"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="710"
      Title="SetRecieptPage">

    <Border Width="500" 
      Height="600"
      Background="White"
      CornerRadius="6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                        Direction="-90" 
                        RenderingBias="Quality" 
                        ShadowDepth="2" 
                        Color="Gray" />
        </Border.Effect>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
              Margin="20">

            <StackPanel Orientation="Vertical" Width="488" Height="99">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="Black" Text="Выберите пользователя" Width="206" TextAlignment="Right" VerticalAlignment="Center" Margin="10" />
                    <ComboBox x:Name="combouser" Width="150" Height="25" SelectionChanged="combouser_SelectionChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="Black" Text="Выберите медикамент" Width="206" TextAlignment="Right" VerticalAlignment="Center" Margin="10" />
                    <ComboBox x:Name="combomed" Width="150" Height="25" SelectionChanged="combomed_SelectionChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="313">
                    <TextBlock Foreground="Black" Text="Код рецепта: " Width="129" TextAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Height="18" />
                    <Label x:Name="lableKodl" Width="150" Height="25"/>
                </StackPanel>
            </StackPanel>


            <Button x:Name="btnAdd" Content="Сгенерировать" Width="150" Height="34" Click="btnAdd_Click" Margin="45,10,10,5">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}"
                                      CornerRadius="16">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <!-- Кнопка Вернуться на страницу авторизации -->
            <Button x:Name="btnBack" Content="Вернуться" Width="223" Height="34" Click="btnBack_Click" Margin="45,10,10,5">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}"
                                      CornerRadius="16">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</Page>
