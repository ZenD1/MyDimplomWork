<Page x:Class="DiplomZabpo43.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomZabpo43"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"

      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="710"
      Title="AdminPage">

    <Grid>
        <Button x:Name="Btn_back" Height="32" Width="37" HorizontalAlignment="Left" Background="White" BorderThickness="0,1" Click="Btn_back_Click" Margin="0,10,0,658">
            <StackPanel Orientation="Vertical" Height="28" Width="35" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.213"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <fa:ImageAwesome Icon="MailReply" Spin="False" SpinDuration="10" Foreground="Black" Width="27" Height="25"/>
                <TextBlock x:Name="lalvba" Text="" FontSize="10" Margin="0,0,0,0" HorizontalAlignment="Center" Height="14" Width="49"/>
            </StackPanel>
        </Button>
        <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Кнопка Профиль -->
            <Button x:Name="UsersButton" Style="{StaticResource MenuButton}" Width="232" Height="150" Margin="0,10" Click="UsersButton_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="Users" Spin="False" SpinDuration="10" Foreground="Black" Width="50" Height="50"/>
                    <TextBlock Text="Настройка пользователей" FontSize="18" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Кнопка Мои покупки -->
            <Button x:Name="MedButton" Style="{StaticResource MenuButton}" Width="232" Height="150" Margin="0,10" Click="MedButton_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="Medkit" Spin="False" SpinDuration="10" Foreground="Black" Width="50" Height="50"/>
                    <TextBlock Text="Настройка медикаментов" FontSize="19" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="RceptButton" Style="{StaticResource MenuButton}" Width="232" Height="150" Margin="0,10" Click="RceptButton_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="File" Spin="False" SpinDuration="10" Foreground="Black" Width="50" Height="50"/>
                    <TextBlock Text="Выдача рецепта" FontSize="19" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>


        </StackPanel>
    </Grid>
</Page>
