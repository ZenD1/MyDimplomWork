<Page x:Class="DiplomZabpo43.PrifilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomZabpo43"
              xmlns:fa="http://schemas.fontawesome.io/icons/"

      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="710"
      Title="PrifilePage">

    <Border Width="500" 
            Height="600"
            Background="White"
            CornerRadius="6" 
         
            >
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                              Direction="-90" 
                              RenderingBias="Quality" 
                              ShadowDepth="2" 
                              Color="Gray" />
        </Border.Effect>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20">
            <!-- Поле Имя и Фамилия -->

            <!-- Поле Дата рождения -->
            <Button x:Name="Btn_back" Height="32" Width="37" HorizontalAlignment="Left" Background="White" BorderThickness="0,1" Click="Btn_back_Click">
                <StackPanel Orientation="Vertical" Height="28" Width="35" RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.213"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                    <fa:ImageAwesome Icon="MailReply" Spin="False" SpinDuration="10" Foreground="Black" Width="27" Height="25"/>
                    <TextBlock x:Name="lalvba" Text="" FontSize="10" Margin="0,0,0,0" HorizontalAlignment="Center" Height="14" Width="49"/>
                </StackPanel>
            </Button>
            <StackPanel Orientation="Horizontal" Height="572" Width="483" Margin="0,0,0,0">
                <StackPanel Orientation="Vertical"  Margin="10" Width="189" HorizontalAlignment="Center">
                    <Image x:Name="imgProfile" Width="182" Height="151"/>
                    <Border x:Name="Second_bor" BorderBrush="Black" BorderThickness="1" >
                        <StackPanel Orientation="Vertical" Width="182" HorizontalAlignment="Left">
                            <TextBlock x:Name="text_zagruz" Foreground="Black" Text="Загрузить фотографию" Margin="10" HorizontalAlignment="Center"/>

                            <Button x:Name="buton_select" Content="Выбрать файл" Width="100" Margin="10" Height="38" HorizontalAlignment="Center" Click="Btn_selectImage" Style="{StaticResource LoginButtonStyle}"/>
                            <StackPanel Orientation="Vertical" Width="192">
                                <TextBlock  x:Name="txtName" Foreground="Black" Text="Имя" Width="33" TextAlignment="Right" VerticalAlignment="Center" Margin="10" />
                                <TextBox x:Name="txtFirstName" Width="150" Height="25"/>
                                <TextBlock  x:Name="LastName" Foreground="Black" Text="Фамилия" Width="57" TextAlignment="Right" VerticalAlignment="Center" Margin="10" />
                                <TextBox x:Name="txtLastName" Width="150" Height="25"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Width="180">
                                <StackPanel Orientation="Vertical" Width="187">
                                    <TextBlock x:Name="txtdata" Foreground="Black" Text="Укажите дату рождения" Width="135" TextAlignment="Center" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center"/>
                                    <DatePicker x:Name="dtpPick2" Width="150" Height="31" HorizontalAlignment="Center" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <StackPanel Orientation="Vertical" Width="180" Margin="0,5,0,0">
                        <Button x:Name="ChangedataElement" Height="20" Width="176" Content="Изменить" Margin="0,10,0,0" Click="ChangedataElement_Click" Style="{StaticResource LoginButtonStyle}"/>
                        <Button x:Name="SaveChanged"  Height="20" Width="176" Content="Сохранить"  Margin="0,10,0,0" Click="SavedataElement_Click" Style="{StaticResource LoginButtonStyle}"/>
                    </StackPanel>
                </StackPanel>

                <Border BorderBrush="Black" BorderThickness="1" Height="483" Width="239">
                    <StackPanel Orientation="Vertical" Margin="3,0,0,12" x:Name="ThreeStack">
                        <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                            <TextBlock Text="Почта:" Width="60" Height="20"></TextBlock>
                            <TextBlock x:Name="UserEmail" Text="{Binding UserEmail}" Width="131" Height="20"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  Margin="0,40,0,0">
                            <TextBlock Text="Телефон:" Width="60" Height="20"></TextBlock>
                            <TextBlock  x:Name="UserPhoneNumber" Text="{Binding UserPhoneNumber}" Width="131" Height="20"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,70,0,0">
                            <TextBlock Text="Имя:" Width="60" Height="20"></TextBlock>
                            <TextBlock  x:Name="UserFirstName" Text="{Binding UserFirstName}" Width="131" Height="20"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,40,0,0">
                            <TextBlock Text="Фамилия:" Width="60" Height="20"></TextBlock>
                            <TextBlock x:Name="UserLastName" Text="{Binding UserLastName}" Width="100" Height="20"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                            <TextBlock Text="День рождения:" Width="97" Height="20"></TextBlock>
                            <TextBlock  x:Name="UserBirthday" Text="{Binding UserBirthday}" Width="131" Height="20"></TextBlock>
                        </StackPanel>

                            <ListBox Width="242" Height="74"  x:Name="listBoxComments" HorizontalAlignment="Center" Margin="0,20,0,0" SelectionChanged="listBoxComments_SelectionChanged">
                            </ListBox>
                        </StackPanel>
                </Border>


            </StackPanel>


            <!-- ListBox -->

        </StackPanel>
    </Border>
</Page>
