<Page x:Class="DiplomZabpo43.CategoryItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomZabpo43"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="710"
      Title="CategoryItems">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListViewRandom" Background="Transparent" ItemsSource="{Binding medrand}" Height="Auto" Width="Auto" HorizontalContentAlignment="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Первый столбец -->
                            <StackPanel Grid.Column="0" Orientation="Vertical" Height="auto">
                                <Image x:Name="imgMedikament" Source="{Binding Image_med}" Stretch="UniformToFill" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="100"/>
                            </StackPanel>
                            <!-- Второй столбец -->
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock x:Name="nameTextBlock" Text="{Binding Name_product}" Margin="5" Foreground="Black"/>
                                <TextBlock x:Name="brandTextBlock" Text="{Binding Path=Brand_name, StringFormat='Бренд: {0}'}" Margin="5" Foreground="Black"/>
                                <TextBlock x:Name="formTextBlock" Text="{Binding Path=Form, StringFormat='Форма: {0}'}" Margin="5" Foreground="Black"/>
                                <TextBlock x:Name="manufacTextBlock" Text="{Binding Path=Manufac_name, StringFormat='Имя производителя: {0}'}" Margin="5" Foreground="Black"/>
                                <TextBlock x:Name="priceTextBlock" Text="{Binding Path=Price, StringFormat='Цена: {0} руб.'}" Margin="5" Foreground="Black"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <!-- Используем WrapPanel с горизонтальной ориентацией -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Page>
