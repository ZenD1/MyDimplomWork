<Page x:Class="DiplomZabpo43.HomePageUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomZabpo43"
              xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="710" d:DesignWidth="700"
      Title="HomePageUser"
      Height="710" Width="700">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="Greeting" Text="Привет" Margin="10" Width="45"/>
            <TextBlock Text="Ваш id=" Height="15" ></TextBlock>
            <TextBlock x:Name="UserIDText" Text="{Binding user_Id}" Margin="10" VerticalAlignment="Top" Grid.Row="2" Width="33"/>
            <TextBlock Text="Вы вошли под именем:" Height="16" ></TextBlock>
            <TextBlock x:Name="EmailText" Text="{Binding username}" Margin="10" VerticalAlignment="Top" Grid.Row="1" Width="125" Foreground="Black" Height="16"/>
        </StackPanel>
      

        <!-- Приветствие пользователя -->
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnBackAut" Height="32" Width="37" HorizontalAlignment="Left" Background="White" BorderThickness="0,1" Click="btnBackAut_Click">
                <StackPanel Orientation="Vertical" Height="28" Width="35" RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.213"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                    <fa:ImageAwesome Icon="MailReply" Spin="False" SpinDuration="10" Foreground="Black" Width="27" Height="25"/>
                    <TextBlock x:Name="lalvba" Text="" FontSize="10" Margin="0,0,0,0" HorizontalAlignment="Center" Height="14" Width="49"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <!-- Блок с изображением -->
        <Border Grid.Row="1" Margin="10" BorderBrush="Black" BorderThickness="1">
            <Image x:Name="ProfileImage" Stretch="UniformToFill"/>
        </Border>

        <!-- Блок с крупными кнопками -->
        <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Кнопка Профиль -->
            <Button x:Name="ProfileButton" Style="{StaticResource MenuButton}" Width="232" Height="150" Margin="0,10" Click="Profile_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="User" Spin="False" SpinDuration="10" Foreground="Black" Width="50" Height="50"/>
                    <TextBlock Text="Профиль" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Кнопка Мои покупки -->
            <Button x:Name="Admin_Button" Style="{StaticResource MenuButton}" Width="232" Height="150" Margin="0,10" Click="MyPurchases_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="UserCircle" Spin="False" SpinDuration="10" Foreground="Black" Width="50" Height="50"/>
                    <TextBlock Text="Админ Меню" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Кнопка Настройки приватности -->
            <Button x:Name="PrivacySettingsButton" Style="{StaticResource MenuButton}" Width="232" Height="150" Margin="0,10" Click="PrivacySettings_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="Lock" Spin="False" SpinDuration="10" Foreground="Black" Width="50" Height="50"/>
                    <TextBlock Text="Настройки приватности" FontSize="20" Foreground="Black" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
